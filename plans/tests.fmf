summary: Run tests

prepare:
  - name: copr
    how: shell
    script:
      - sudo dnf install -y 'dnf-command(copr)'
      - sudo dnf copr enable -y @storage/blivet-daily

  - name: ansible
    how: ansible
    playbook: misc/install-test-dependencies.yml

execute:
    how: tmt
    script: sudo make test
